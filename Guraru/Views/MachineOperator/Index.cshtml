@model IEnumerable<GuraruRepository.Models.MachineOperator>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OperatorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsDeleted)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AdhaarNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LocationDetails)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OperatorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsDeleted)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AdhaarNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocationDetails)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.OperatorId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.OperatorId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.OperatorId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
