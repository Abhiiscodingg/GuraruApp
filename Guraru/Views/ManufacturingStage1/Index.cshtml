@model IEnumerable<GuraruRepository.Models.ManufacturingStage1>

@{
    ViewData["Title"] = "Index";
}

<h1>Machine Production</h1>

<p>
    <a asp-action="Create">New Entry</a>
</p>
<table class="table table-bordered table-hover table-responsive">
    <thead>
        <tr>
            <th>
               Submitted Date
            </th>
            <th>
                @*  @Html.DisplayNameFor(model => model.MachineNavigation) *@
                Machine
            </th>
            <th>
                @* @Html.DisplayNameFor(model => model.MachineOperatorNavigation) *@
                Machine Operator
            </th>
            <th>
                @* @Html.DisplayNameFor(model => model.QualityNavigation) *@
                Quality
            </th>
            <th>
                Submitted Weight
            </th>
            <th>
                Completed Weight
            </th>
            <th>
                Used Weight
            </th>
            <th>
                Submitted By
            </th>
            @* <th>
                @Html.DisplayNameFor(model => model.CreatedBy)
            </th> *@
            <th>
                Completed Date
            </th>
            <th>
                Created Date
            </th>
            <th>Waste Amt</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr onclick="location.href = '@Url.Action("Details",new { id = item.Id })'">
             <td>
                 @Html.DisplayFor(modelItem => item.SubmittedDate)
             </td>
            <td>
                @Html.DisplayFor(modelItem => item.MachineNavigation.MachineName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MachineOperatorNavigation.OperatorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QualityNavigation.QualityName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubmittedWeght)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompletedWeight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UsedWeight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubmittedBy)
            </td>
           @*  <td>
                @Html.DisplayFor(modelItem => item.CreatedBy)
            </td> *@
            <td>
                @Html.DisplayFor(modelItem => item.CompletedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
                @{
                    if(item.CompletedDate!=null)
                    {
                        int? waste = item.SubmittedWeght - item.CompletedWeight;
                        <td>@waste</td>
                    }
            }
            @* <td>@item.SubmittedWeght</td> *@
            @* <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td> *@
        </tr>
}
    </tbody>
</table>
